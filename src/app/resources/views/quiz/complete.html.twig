{% extends 'index.html.twig' %}

{% block styles %}
    <link rel="stylesheet" type="text/css" href="https://s3.amazonaws.com/php-amara-quiz-prod-serverlessdeploymentbucket-1pvchvo3f5i78/public/css/santa.css">
{% endblock %}

{% block body %}
    <div class="window">
        <div class="santa">
            <div class="head">
                <div class="face">
                    <div class="redhat">
                        <div class="whitepart"></div>
                        <div class="redpart"></div>
                        <div class="hatball"></div>
                    </div>
                    <div class="eyes"></div>
                    <div class="beard">
                        <div class="nouse"></div>
                        <div class="mouth"></div>
                    </div>
                </div>
                <div class="ears"></div>
            </div>
            <div class="body"></div>
        </div>
    </div>
    <div class="message">
        <h1>Merry Christmas!</h1>
        <br>
        <h2 class="copyright">You scored {{ score }} points, well done! Go to our Santas (Tech team) and collect your prize!</h2>
    </div>
{% endblock %}

